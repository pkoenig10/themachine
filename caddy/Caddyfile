{
	dynamic_dns {
		provider cloudflare {env.CLOUDFLARE_API_TOKEN}
		domains {
			{$DOMAIN}
		}
		check_interval 5m
	}

	log {
		format console {
			time_local
		}
	}
}

(auth) {
	reverse_proxy :81 {
		method GET
		rewrite /auth?group={args.0}&redirect={scheme}://{hostport}{uri}

		@200 status 200
		handle_response @200 {
		}
	}
}

(basicauth) {
	basicauth {
		{$USERNAME} {$PASSWORD}
	}
}

*.{$DOMAIN} {
	tls {$EMAIL} {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
	}

	@auth {
		host auth.{$DOMAIN}
	}
	handle @auth {
		reverse_proxy :81
	}

	@downloads {
		host downloads.{$DOMAIN}
	}
	handle @downloads {
		import auth users
		reverse_proxy :9091
	}

	@movies {
		host movies.{$DOMAIN}
	}
	handle @movies {
		import auth users
		reverse_proxy :7878
	}

	@plex {
		host plex.{$DOMAIN}
	}
	handle @plex {
		import auth users
		reverse_proxy :32400
	}

	@search {
		host search.{$DOMAIN}
	}
	handle @search {
		import auth users
		reverse_proxy :9117
	}

	@stats {
		host stats.{$DOMAIN}
	}
	handle @stats {
		import auth admins
		reverse_proxy :8181
	}

	@tv {
		host tv.{$DOMAIN}
	}
	handle @tv {
		import auth users
		reverse_proxy :8989
	}

	@radarr {
		host radarr.{$DOMAIN}
		path /api/*
	}
	handle @radarr {
		reverse_proxy :7878
	}

	@sonarr {
		host sonarr.{$DOMAIN}
		path /api/*
	}
	handle @sonarr {
		reverse_proxy :8989
	}

	@transmission {
		host transmission.{$DOMAIN}
		path /transmission/rpc
	}
	handle @transmission {
		import basicauth
		reverse_proxy :9091
	}

	abort
}
